{
  "name": "yaac",
  "displayName": "YAAC - Yet Another Auto Commit",
  "version": "0.1.0",
  "description": "An elegant AI-powered commit message generator for VSCode",
  "publisher": "cs-magic",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:.git",
    "onCommand:yaac.quickCommit",
    "onCommand:yaac.selectSolution",
    "onCommand:yaac.openPreferences"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "yaac.quickCommit",
        "title": "YAAC: Quick Commit"
      },
      {
        "command": "yaac.selectSolution",
        "title": "YAAC: Select Solution"
      },
      {
        "command": "yaac.openPreferences",
        "title": "YAAC: Open Prefernces"
      }
    ],
    "configuration": {
      "title": "Yet Another Auto Commit",
      "properties": {
        "yaac.basic.enabled": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "是否启用 YAAC",
          "order": 1
        },
        "yaac.basic.uiLanguage": {
          "type": "string",
          "enum": [
            "system",
            "zh_CN",
            "en_US"
          ],
          "enumDescriptions": [
            "跟随系统语言",
            "中文",
            "English"
          ],
          "default": "system",
          "markdownDescription": "界面显示语言",
          "order": 2
        },
        "yaac.ui.mode": {
          "type": "string",
          "default": "webview",
          "enum": [
            "quickInput",
            "webview"
          ],
          "enumDescriptions": [
            "Quick & Simple: Single-line input box for fast commits",
            "Professional: Full-featured editor with preview and formatting"
          ],
          "markdownDescription": "提交界面模式选择",
          "order": 10
        },
        "yaac.ui.webview.layout": {
          "type": "string",
          "enum": [
            "vertical",
            "horizontal"
          ],
          "enumDescriptions": [
            "编辑器和预览上下排列",
            "编辑器和预览左右排列"
          ],
          "default": "horizontal",
          "markdownDescription": "Webview 模式下的布局方式",
          "order": 11
        },
        "yaac.ui.webview.editor": {
          "type": "string",
          "enum": [
            "plain",
            "rich"
          ],
          "enumDescriptions": [
            "纯文本编辑器",
            "富文本编辑器"
          ],
          "default": "rich",
          "markdownDescription": "Webview 模式下的编辑器类型",
          "order": 12
        },
        "yaac.git.emptyChangeBehavior": {
          "type": "string",
          "enum": [
            "skip",
            "amend"
          ],
          "enumDescriptions": [
            "跳过空更改，不执行任何操作",
            "修改最近一次提交（git commit --amend）"
          ],
          "default": "skip",
          "markdownDescription": "当工作区没有文件变更时的行为",
          "order": 20
        },
        "yaac.git.autoStage": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "是否自动暂存所有更改",
          "order": 21
        },
        "yaac.git.commitLanguage": {
          "type": "string",
          "enum": [
            "system",
            "zh_CN",
            "en_US"
          ],
          "enumDescriptions": [
            "跟随系统语言",
            "中文提交信息",
            "English commit messages"
          ],
          "default": "system",
          "markdownDescription": "Git 提交信息的语言",
          "order": 22
        },
        "yaac.ai.provider": {
          "type": "string",
          "enum": [
            "OpenAI / GPT 4",
            "OpenAI / GPT 3.5 Turbo"
          ],
          "enumDescriptions": [
            "High accuracy commit messages using GPT-4 (API Required)",
            "Fast and efficient commit messages using GPT-3.5 (API Required)"
          ],
          "default": "OpenAI / GPT 3.5 Turbo",
          "markdownDescription": "选择 AI 提供商和模型",
          "order": 30
        },
        "yaac.ai.providers": {
          "type": "object",
          "markdownDescription": "AI 提供商的启用状态配置",
          "additionalProperties": {
            "type": "boolean"
          },
          "default": {},
          "order": 31
        },
        "yaac.ai.apiKeys": {
          "type": "object",
          "markdownDescription": "AI 服务提供商的 API 密钥配置",
          "properties": {
            "openai": {
              "type": "string",
              "default": "",
              "markdownDescription": "OpenAI API 密钥",
              "order": 32
            },
            "anthropic": {
              "type": "string",
              "default": "",
              "markdownDescription": "Anthropic API 密钥",
              "order": 33
            }
          },
          "order": 32
        },
        "yaac.telemetry.enabled": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "是否启用使用数据收集（匿名）",
          "order": 40
        },
        "yaac.telemetry.shareLevel": {
          "type": "string",
          "enum": [
            "minimal",
            "basic",
            "full"
          ],
          "enumDescriptions": [
            "仅收集基本错误信息",
            "包含功能使用统计和性能数据",
            "额外包含 AI 生成结果的质量反馈"
          ],
          "default": "basic",
          "markdownDescription": "数据收集级别",
          "order": 41
        },
        "yaac.feedback.enabled": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "是否启用用户反馈功能（支持一键创建 GitHub Issue）",
          "order": 50
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build",
    "build": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "watch": "cross-env NODE_ENV=development esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --watch",
    "lint": "eslint src --ext ts",
    "test": "vitest"
  },
  "dependencies": {
    "@types/lodash-es": "^4.17.12",
    "handlebars": "^4.7.8",
    "lodash-es": "^4.17.21",
    "simple-git": "^3.27.0",
    "yaml": "^2.6.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/vscode": "^1.95.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.24.0",
    "typescript": "^5.7.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cs-magic/yaac"
  },
  "keywords": [
    "git",
    "commit",
    "ai",
    "vscode",
    "productivity"
  ],
  "author": "cs-magic",
  "license": "MIT"
}
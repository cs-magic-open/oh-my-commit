{
  "name": "@cs-magic/oh-my-commits",
  "displayName": "Oh My Commits",
  "version": "0.3.0",
  "description": "An elegant AI-powered commit message generator for VSCode",
  "author": "cs-magic",
  "publisher": "cs-magic",
  "main": "./dist/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/cs-magic-open/oh-my-commits"
  },
  "keywords": [
    "git",
    "commit",
    "ai",
    "vscode",
    "productivity"
  ],
  "packageManager": "pnpm@8.10.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "type-check": "tsc --build",
    "dev": "turbo dev",
    "watch": "turbo watch",
    "gen-docs": "ts-node -P scripts/tsconfig.json scripts/generate-config-docs.ts",
    "prepare": "husky install",
    "build": "turbo build",
    "docs:dev": "turbo run docs:dev --filter=@oh-my-commits/website",
    "docs:build": "turbo run docs:build --filter=@oh-my-commits/website",
    "docs:preview": "turbo run docs:preview --filter=@oh-my-commits/website"
  },
  "devDependencies": {
    "@cs-magic/md-toc": "^0.5.1",
    "@types/node": "^22.10.1",
    "@types/vscode": "^1.95.0",
    "chalk": "^4.1.2",
    "cli-progress": "^3.12.0",
    "commander": "^12.1.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.24.0",
    "glob": "^11.0.0",
    "husky": "^8.0.3",
    "markdown-toc": "^1.2.0",
    "minimist": "^1.2.8",
    "ts-node": "^10.9.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "zod": "^3.23.8"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:.git"
  ],
  "contributes": {
    "commands": [
      {
        "command": "omc.quickCommit",
        "title": "Oh My Commits: Quick Commit"
      },
      {
        "command": "omc.selectModel",
        "title": "Oh My Commits: Select Model"
      },
      {
        "command": "omc.openPreferences",
        "title": "Oh My Commits: Open Preferences"
      }
    ],
    "configuration": {
      "title": "Oh My Commits",
      "properties": {
        "omc.basic.enabled": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "是否启用 Oh My Commits",
          "order": 1
        },
        "omc.basic.uiLanguage": {
          "type": "string",
          "enum": [
            "system",
            "zh_CN",
            "en_US"
          ],
          "enumDescriptions": [
            "跟随系统语言",
            "中文",
            "English"
          ],
          "default": "system",
          "markdownDescription": "界面显示语言",
          "order": 2
        },
        "omc.ac.model": {
          "type": "string",
          "enum": [
            "omc.test",
            "omc.balanced",
            "omc.professional",
            "cgop.openai.chatgpt-3.5",
            "cgop.openai.chatgpt-4"
          ],
          "default": "omc.test",
          "markdownDescription": "选择自动提交（AC）服务的供应商与模型",
          "order": 3
        },
        "omc.git.emptyChangeBehavior": {
          "type": "string",
          "enum": [
            "skip",
            "amend"
          ],
          "enumDescriptions": [
            "跳过空更改，不执行任何操作",
            "修改最近一次提交（git commit --amend）"
          ],
          "default": "skip",
          "markdownDescription": "当工作区没有文件变更时的行为",
          "order": 20
        },
        "omc.git.autoStage": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "是否自动暂存所有更改",
          "order": 21
        },
        "omc.git.commitLanguage": {
          "type": "string",
          "enum": [
            "system",
            "zh_CN",
            "en_US"
          ],
          "enumDescriptions": [
            "跟随系统语言",
            "中文提交信息",
            "English commit messages"
          ],
          "default": "system",
          "markdownDescription": "Git 提交信息的语言",
          "order": 22
        },
        "omc.ui.mode": {
          "type": "string",
          "enum": [
            "silent",
            "notification",
            "window",
            "panel"
          ],
          "enumDescriptions": [
            "仅在状态栏显示提交信息和状态",
            "弹出通知，支持修改按钮",
            "以浮动窗口显示提交界面",
            "在面板中显示完整提交界面"
          ],
          "default": "window",
          "markdownDescription": "提交界面显示模式",
          "order": 23
        },
        "omc.ai.apiKeys": {
          "type": "object",
          "markdownDescription": "AI 服务提供商的 API 密钥配置",
          "additionalProperties": {
            "type": "string"
          },
          "properties": {
            "openai": {
              "type": "string",
              "default": "",
              "markdownDescription": "OpenAI API 密钥",
              "order": 301
            },
            "anthropic": {
              "type": "string",
              "default": "",
              "markdownDescription": "Anthropic API 密钥",
              "order": 302
            }
          },
          "order": 30
        },
        "omc.telemetry.enabled": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "是否启用使用数据收集（匿名）",
          "order": 50
        },
        "omc.telemetry.shareLevel": {
          "type": "string",
          "enum": [
            "minimal",
            "basic",
            "full"
          ],
          "enumDescriptions": [
            "仅收集基本错误信息",
            "包含功能使用统计和性能数据",
            "额外包含 AI 生成结果的质量反馈"
          ],
          "default": "basic",
          "markdownDescription": "数据收集级别",
          "order": 51
        },
        "omc.feedback.enabled": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "是否启用用户反馈功能（支持一键创建 GitHub Issue）",
          "order": 60
        }
      }
    }
  },
  "license": "MIT",
  "dependencies": {
    "neverthrow": "^8.1.1"
  }
}

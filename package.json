{
  "name": "yaac",
  "displayName": "YAAC - Yet Another Auto Commit",
  "version": "0.1.0",
  "description": "An elegant AI-powered commit message generator for VSCode",
  "publisher": "cs-magic",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:.git",
    "onCommand:yaac.quickCommit",
    "onCommand:yaac.selectSolution",
    "onCommand:yaac.openPreferences"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "yaac.quickCommit",
        "title": "YAAC: Quick Commit"
      },
      {
        "command": "yaac.selectSolution",
        "title": "YAAC: Select Solution"
      },
      {
        "command": "yaac.openPreferences",
        "title": "YAAC: Open Prefernces"
      }
    ],
    "configuration": {
      "title": "YAAC",
      "properties": {
        "yaac.enabled": {
          "type": "boolean",
          "default": true,
          "description": "是否启用 YAAC"
        },
        "yaac.language": {
          "type": "string",
          "enum": [
            "zh_CN",
            "en_US"
          ],
          "default": "zh_CN",
          "description": "提交信息的语言"
        },
        "yaac.providers": {
          "type": "object",
          "description": "Provider 启用状态配置",
          "additionalProperties": {
            "type": "boolean"
          },
          "default": {}
        },
        "yaac.currentSolution": {
          "type": "string",
          "description": "当前使用的 Solution",
          "enum": []
        },
        "yaac.apiKeys": {
          "type": "object",
          "additionalProperties": false,
          "default": {},
          "description": "各 AI 服务商的 API 密钥配置"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build",
    "build": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "watch": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --watch",
    "lint": "eslint src --ext ts",
    "test": "vitest"
  },
  "dependencies": {
    "yaml": "^2.6.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/vscode": "^1.95.0",
    "esbuild": "^0.24.0",
    "typescript": "^5.7.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cs-magic/yaac"
  },
  "keywords": [
    "git",
    "commit",
    "ai",
    "vscode",
    "productivity"
  ],
  "author": "cs-magic",
  "license": "MIT"
}

{
  "name": "@cs-magic/oh-my-commit",
  "displayName": "Oh My Commit",
  "version": "0.4.1",
  "description": "An elegant AI-powered commit message generator for VSCode",
  "author": "cs-magic",
  "publisher": "cs-magic",
  "main": "./dist/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/cs-magic-open/oh-my-commit"
  },
  "keywords": [
    "git",
    "commit",
    "ai",
    "vscode",
    "productivity"
  ],
  "packageManager": "pnpm@8.10.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "lerna run build",
    "clean": "lerna run clean",
    "dev": "lerna run dev",
    "watch": "lerna run watch",
    "gen-docs": "ts-node -P packages/scripts/tsconfig.json scripts/generate-config-docs.ts",
    "type-check": "tsc --build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "clean:modules": "./packages/scripts/clean-modules.sh",
    "changesets": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "dependencies": {
    "@types/lodash": "^4.17.13",
    "handlebars": "^4.7.8",
    "https-proxy-agent": "^7.0.6",
    "immer": "^10.1.1",
    "lodash": "^4.17.21",
    "neverthrow": "^8.1.1",
    "reflect-metadata": "^0.2.1",
    "simple-git": "^3.27.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.11",
    "@changesets/config": "^3.0.5",
    "@changesets/git": "^3.0.2",
    "@cs-magic/eslint-config": "^0.6.1",
    "@cs-magic/md-toc": "^0.5.1",
    "@manypkg/get-packages": "^2.2.2",
    "@nrwl/js": "^19.8.4",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.15",
    "@swc/core": "^1.10.1",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "autoprefixer": "^10.4.20",
    "chalk": "^4.1.2",
    "cli-progress": "^3.12.0",
    "commander": "^12.1.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.24.0",
    "eslint": "^8.57.1",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.10.0",
    "eslint-plugin-node": "^11.1.0",
    "glob": "^11.0.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.3",
    "lerna": "^8.1.9",
    "lodash-es": "^4.17.21",
    "markdown-toc": "^1.2.0",
    "minimist": "^1.2.8",
    "prettier": "^3.4.2",
    "react-refresh-typescript": "^2.0.9",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsup": "workspace:*",
    "turbo": "^2.3.3",
    "typedi": "^0.10.0",
    "typescript": "5.3.3",
    "zod": "^3.24.1"
  }
}

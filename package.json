{
  "name": "yaac",
  "displayName": "YAAC - Yet Another Auto Commit",
  "version": "0.1.0",
  "description": "An elegant AI-powered commit message generator for VSCode",
  "publisher": "cs-magic",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:.git",
    "onCommand:yaac.quickCommit",
    "onCommand:yaac.switchSolution",
    "onCommand:yaac.configureApi",
    "onCommand:yaac.manageSolutions"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "yaac.quickCommit",
        "title": "YAAC: Quick Commit"
      },
      {
        "command": "yaac.switchSolution",
        "title": "YAAC: Switch Solution"
      },
      {
        "command": "yaac.configureApi",
        "title": "YAAC: Configure API Keys"
      },
      {
        "command": "yaac.manageSolutions",
        "title": "YAAC: Manage Solutions"
      }
    ],
    "configuration": {
      "title": "YAAC",
      "properties": {
        "yaac.enabled": {
          "type": "boolean",
          "default": true,
          "description": "是否启用 YAAC"
        },
        "yaac.language": {
          "type": "string",
          "enum": [
            "zh_CN",
            "en_US"
          ],
          "default": "zh_CN",
          "description": "提交信息的语言"
        },
        "yaac.apiKeys": {
          "type": "object",
          "properties": {
            "openai": {
              "type": "string",
              "default": "",
              "description": "OpenAI API 密钥"
            },
            "anthropic": {
              "type": "string",
              "default": "",
              "description": "Anthropic API 密钥"
            },
            "deepseek": {
              "type": "string",
              "default": "",
              "description": "Deepseek API 密钥"
            },
            "zhipu": {
              "type": "string",
              "default": "",
              "description": "智谱 AI API 密钥"
            },
            "groq": {
              "type": "string",
              "default": "",
              "description": "Groq API 密钥"
            }
          },
          "additionalProperties": false,
          "default": {},
          "description": "各 AI 服务商的 API 密钥配置"
        },
        "yaac.providers": {
          "type": "object",
          "properties": {
            "gcop": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "default": true,
                  "description": "是否启用 gcop 提供商"
                }
              }
            }
          },
          "default": {
            "gcop": {
              "enabled": true
            }
          },
          "description": "提交消息生成服务提供商配置"
        },
        "yaac.solution": {
          "type": "string",
          "enum": [
            "gcop/basic",
            "gcop/advanced",
            "gcop/team"
          ],
          "enumDescriptions": [
            "基础解决方案：适用于个人开发者",
            "高级解决方案：包含更多上下文分析",
            "团队解决方案：适用于团队协作场景"
          ],
          "default": "gcop/basic",
          "description": "选择 AI 提供商的解决方案（每个提供商可能提供多种不同的解决方案）"
        },
        "yaac.style": {
          "type": "string",
          "enum": [
            "conventional",
            "gitmoji",
            "angular",
            "semantic",
            "custom"
          ],
          "enumDescriptions": [
            "Conventional Commits 风格 (type: description)",
            "Gitmoji 风格 (emoji type: description)",
            "Angular 风格 (type(scope): description)",
            "语义化版本风格 (type(scope): description [BREAKING CHANGE])",
            "自定义风格"
          ],
          "default": "conventional",
          "description": "期望的提交信息风格（注意：实际输出风格取决于所选解决方案的支持情况）"
        },
        "yaac.telemetry": {
          "type": "string",
          "enum": [
            "off",
            "basic",
            "enhanced",
            "full"
          ],
          "enumDescriptions": [
            "完全关闭数据收集",
            "仅收集提交是否被接受的信息",
            "收集提交信息及其生成过程",
            "收集完整信息（包含文件差异，不建议在私密项目中使用）"
          ],
          "default": "basic",
          "description": "数据收集级别，用于改进服务质量"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build",
    "build": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "watch": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --watch",
    "lint": "eslint src --ext ts",
    "test": "vitest"
  },
  "dependencies": {
    "yaml": "^2.6.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/vscode": "^1.95.0",
    "esbuild": "^0.24.0",
    "typescript": "^5.7.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cs-magic/yaac"
  },
  "keywords": [
    "git",
    "commit",
    "ai",
    "vscode",
    "productivity"
  ],
  "author": "cs-magic",
  "license": "MIT"
}

{
  "name": "yaac",
  "displayName": "YAAC - Yet Another Auto Commit",
  "version": "0.1.0",
  "description": "An elegant AI-powered commit message generator for VSCode",
  "publisher": "cs-magic",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:.git",
    "onCommand:yaac.quickCommit",
    "onCommand:yaac.switchSolution",
    "onCommand:yaac.configureApi",
    "onCommand:yaac.manageSolutions"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "yaac.quickCommit",
        "title": "YAAC: Quick Commit"
      },
      {
        "command": "yaac.switchSolution",
        "title": "YAAC: Switch Solution"
      },
      {
        "command": "yaac.configureApi",
        "title": "YAAC: Configure API Keys"
      },
      {
        "command": "yaac.manageSolutions",
        "title": "YAAC: Manage Solutions"
      }
    ],
    "configuration": {
      "title": "YAAC",
      "properties": {
        "yaac.enabled": {
          "type": "boolean",
          "default": true,
          "description": "是否启用 YAAC"
        },
        "yaac.language": {
          "type": "string",
          "enum": [
            "zh_CN",
            "en_US"
          ],
          "default": "zh_CN",
          "description": "提交信息的语言"
        },
        "yaac.providers": {
          "type": "object",
          "description": "Provider 启用状态配置",
          "additionalProperties": {
            "type": "boolean"
          },
          "default": {}
        },
        "yaac.currentSolution": {
          "type": "string",
          "description": "当前使用的 Solution（默认使用第一个可用的 solution）",
          "enum": ["openai-gpt4", "openai-gpt35"],
          "enumDescriptions": [
            "OpenAI GPT-4（高准确度）",
            "OpenAI GPT-3.5（快速响应）"
          ]
        },
        "yaac.apiKeys": {
          "type": "object",
          "properties": {
            "openai": {
              "type": "string",
              "default": "",
              "description": "OpenAI API 密钥"
            },
            "anthropic": {
              "type": "string",
              "default": "",
              "description": "Anthropic API 密钥"
            },
            "deepseek": {
              "type": "string",
              "default": "",
              "description": "Deepseek API 密钥"
            },
            "zhipu": {
              "type": "string",
              "default": "",
              "description": "智谱 AI API 密钥"
            },
            "groq": {
              "type": "string",
              "default": "",
              "description": "Groq API 密钥"
            }
          },
          "additionalProperties": false,
          "default": {},
          "description": "各 AI 服务商的 API 密钥配置"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build",
    "build": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "watch": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --watch",
    "lint": "eslint src --ext ts",
    "test": "vitest"
  },
  "dependencies": {
    "yaml": "^2.6.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/vscode": "^1.95.0",
    "esbuild": "^0.24.0",
    "typescript": "^5.7.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cs-magic/yaac"
  },
  "keywords": [
    "git",
    "commit",
    "ai",
    "vscode",
    "productivity"
  ],
  "author": "cs-magic",
  "license": "MIT"
}

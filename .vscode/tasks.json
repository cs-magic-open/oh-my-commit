{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "command": "pnpm",
            "args": ["run", "watch"],
            "label": "pnpm: watch",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*",
                    "endsPattern": ".*"
                }
            },
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}

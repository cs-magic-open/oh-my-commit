{
  "root": true,
  "extends": [
    "@cs-magic/eslint-config/typescript",
    "@cs-magic/eslint-config/react",
    "@cs-magic/eslint-config/prettier"
  ],
  "parserOptions":  {
    "projectService": true,
    "project": true
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "project": ["packages/__base__/tsconfig.json", "packages/*/tsconfig.json"],
        "alwaysTryTypes": true
      }
    }
  },
  "overrides": [
    {
      "files": ["packages/webview/**"],
      "globals": {
        "acquireVsCodeApi": "readonly"
      }
    }
  ],
  "ignorePatterns": ["*.config.*", "dist"],
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "jest": true
  },
  "globals": {
    "JSX": true
  },
  "rules": {
    "@typescript-eslint/consistent-type-imports": [
      "error",
      {
        "prefer": "type-imports",
        "fixStyle": "inline-type-imports"
      }
    ],
    "import/no-default-export": "off",
    "import/default": "off",
    "import/order": "off",
    "@typescript-eslint/no-unsafe-assignment": "off",
    "@typescript-eslint/no-unsafe-member-access": "off",
    "@typescript-eslint/no-unsafe-call": "off",
    "@typescript-eslint/no-unsafe-return": "off",
    "@typescript-eslint/no-unsafe-argument": "off",
    "@typescript-eslint/prefer-nullish-coalescing": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/no-unused-vars": "warn",
    "no-console": "warn",
    "no-unused-vars": "warn",
    "no-extra-semi": "off",
    "@typescript-eslint/no-floating-promises": "off",
    "empty-import-meta": "off",
    "@typescript-eslint/no-unnecessary-type-assertion": "off"
  }
}
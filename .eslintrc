{
  "extends": ["@cs-magic/eslint-config/typescript", "@cs-magic/eslint-config/prettier"],
  "parserOptions": {
    "project": ["tsconfig.json", "tsconfig.build.json", "packages/*/tsconfig.json"]
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "project": ["packages/*/tsconfig.json"]
      }
    }
  },
  "env": {
    "browser": true,
    "node": true
  },
  "overrides": [
    {
      "files": ["packages/*/*.config.ts", "packages/*/.*.config.js"],
      "parserOptions": {
        "project": ["tsconfig.build.json"]
      }
    }
  ]
}

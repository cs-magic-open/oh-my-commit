{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": [
      "ES2020"
    ],
    "sourceMap": true,
    "rootDir": ".",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@oh-my-commit/extension/*": ["packages/extension/src/*"],
      "@oh-my-commit/shared/*": ["packages/shared/src/*"]
    }
  },
  "files": [],
  "references": [
    {
      "path": "./packages/shared"
    },
    {
      "path": "./packages/cli"
    },
    {
      "path": "./packages/extension"
    },
    {
      "path": "./packages/webview-ui"
    },
    {
      "path": "./packages/provider-official"
    }
  ],
  "exclude": [
    "**/node_modules",
    ".vscode-test"
  ]
}

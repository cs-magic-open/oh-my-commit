{
  "name": "@oh-my-commit/extension",
  "version": "0.16.0",
  "description": "VSCode extension for AI-powered commit message generation with customizable providers",
  "engines": {
    "vscode": "^1.80.0"
  },
  "main": "./dist/extension.js",
  "categories": [
    "Other"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "build:extension": "vsce package --no-dependencies -o dist/oh-my-commit.vsix",
    "clean": "rimraf dist tsconfig.tsbuildinfo .turbo",
    "type-check": "tsc --noEmit"
  },
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:.git"
  ],
  "contributes": {
    "views": {
      "ohMyCommit": [
        {
          "type": "webview",
          "id": "ohMyCommit.view",
          "name": "Oh My Commit"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ohMyCommit",
          "title": "Oh My Commit",
          "icon": "$(git-commit)"
        }
      ]
    },
    "commands": [
      {
        "command": "ohMyCommit.quickCommit",
        "title": "Oh My Commit: Quick Commit"
      },
      {
        "command": "ohMyCommit.selectModel",
        "title": "Oh My Commit: Select Model"
      },
      {
        "command": "ohMyCommit.openPreference",
        "title": "Oh My Commit: Open Preference"
      }
    ],
    "configuration": {
      "title": "Oh My Commit",
      "properties": {
        "ohMyCommit.ui.mode": {
          "type": "string",
          "enum": [
            "notification",
            "panel"
          ],
          "enumDescriptions": [
            "弹出通知，支持修改按钮",
            "在面板中显示完整提交界面"
          ],
          "default": "panel",
          "markdownDescription": "提交界面显示模式",
          "order": 1
        },
        "ohMyCommit.basic.uiLanguage": {
          "type": "string",
          "enum": [
            "system",
            "zh_CN",
            "en_US"
          ],
          "enumDescriptions": [
            "跟随系统语言",
            "中文",
            "English"
          ],
          "default": "system",
          "markdownDescription": "界面显示语言",
          "order": 2
        },
        "ohMyCommit.git.commitLanguage": {
          "type": "string",
          "enum": [
            "system",
            "zh_CN",
            "en_US"
          ],
          "enumDescriptions": [
            "跟随系统语言",
            "中文",
            "English"
          ],
          "default": "system",
          "markdownDescription": "Commit 信息语言",
          "order": 3
        },
        "ohMyCommit.model.id": {
          "type": "string",
          "enum": [
            "ohMyCommit.standard"
          ],
          "default": "ohMyCommit.standard",
          "markdownDescription": "选择自动提交（AC）服务的供应商与模型",
          "order": 4
        },
        "ohMyCommit.ai.apiKeys": {
          "type": "object",
          "markdownDescription": "AI 服务提供商的 API 密钥配置",
          "additionalProperties": {
            "type": "string"
          },
          "properties": {
            "openai": {
              "type": "string",
              "default": "",
              "markdownDescription": "OpenAI API 密钥",
              "order": 301
            },
            "anthropic": {
              "type": "string",
              "default": "",
              "markdownDescription": "Anthropic API 密钥",
              "order": 302
            }
          },
          "order": 30
        },
        "ohMyCommit.telemetry.shareLevel": {
          "type": "string",
          "enum": [
            "minimal",
            "basic",
            "full"
          ],
          "enumDescriptions": [
            "仅收集基本错误信息",
            "包含功能使用统计和性能数据",
            "额外包含 AI 生成结果的质量反馈"
          ],
          "default": "basic",
          "markdownDescription": "数据收集级别",
          "order": 51
        }
      }
    }
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@oh-my-commit/shared": "workspace:^",
    "@oh-my-commit/webview": "workspace:^",
    "handlebars": "^4.7.8",
    "lodash": "^4.17.21",
    "simple-git": "^3.27.0",
    "vscode": "^1.1.37",
    "yaml": "^2.6.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.202",
    "@types/node": "^22.10.1",
    "@types/vscode": "^1.80.0",
    "esbuild": "^0.19.11",
    "nodemon": "^2.0.22",
    "tsup": "workspace:^",
    "typescript": "^5.0.2",
    "vsce": "^2.15.0"
  }
}

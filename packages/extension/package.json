{
  "name": "@oh-my-commit/extension",
  "displayName": "Oh My Commit",
  "description": "AI-powered commit message generator",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --minify",
    "build:extension": "vsce package --no-dependencies -o ../../dist/oh-my-commit.vsix",
    "dev": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --sourcemap --watch",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@oh-my-commit/shared": "workspace:*",
    "@anthropic-ai/sdk": "^0.32.1",
    "handlebars": "^4.7.8",
    "lodash-es": "^4.17.21",
    "simple-git": "^3.27.0",
    "yaml": "^2.6.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/vscode": "^1.95.0",
    "esbuild": "^0.19.11",
    "typescript": "^5.0.2",
    "vsce": "^2.15.0"
  }
}

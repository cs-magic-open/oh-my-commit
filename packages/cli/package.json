{
  "name": "@oh-my-commits/cli",
  "version": "0.0.1",
  "bin": {
    "omc": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --platform node",
    "dev": "npm run build -- --watch",
    "lint": "eslint \"src/**/*.ts*\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "eslint": "^8.0.0",
    "eslint-config-custom": "*",
    "tsconfig": "*",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@oh-my-commits/shared": "workspace:*",
    "commander": "^12.0.0",
    "chalk": "^5.3.0",
    "inquirer": "^9.2.12",
    "neverthrow": "^6.1.0",
    "simple-git": "^3.22.0"
  },
  "type": "module"
}

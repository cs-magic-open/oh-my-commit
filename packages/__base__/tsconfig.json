{
  "extends": [
    "../../tsconfig.base.json"
  ],
  "compilerOptions": {
    "paths": {
      // 当前包内的别名
      "@/*": ["./src/*"],
      // 跨包引用
      "@shared": ["../shared/src"],
      "@shared/*": ["../shared/src/*"],
      "@extension/*": ["../extension/src/*"],
      "@webview/*": ["../webview/src/*"],
      "@cli/*": ["../cli/src/*"],
      "@docs/*": ["../docs/src/*"],
      "@providers/*": ["../providers/src/*"]
    }
  }
}
{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "declaration": true,
    "composite": true,

    "emitDeclarationOnly": true,
    "sourceMap": true,
    "declarationMap": true
  }
}
